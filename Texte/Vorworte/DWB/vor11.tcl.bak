$w insert end "G" ai
$w insert end "UEINZ" ar
$w insert end " in Halle, der im j. "
$w insert end "1640 in einem briefe an den fürsten Ludwig über "
$w insert end "eine erstrebte "
$w insert end "sprachlehr" i
$w insert end " die bemerkung fallen läszt "
$w insert end "(erzschr. s. 245): "
$w insert end "und weil in Welschland und Frankreich " i
$w insert end "anietzo die deutsche sprach mit groszem fleisz, "
$w insert end "wie ich berichtet werde, getrieben wird, so were es "
$w insert end "gut, dasz ein wörterbuch" i
$w insert end " ("
$w insert end "lexicon" i
$w insert end ") "
$w insert end "wie auch phrases " i
$w insert end "oder redensartbuch mit ehesten aus den besten "
