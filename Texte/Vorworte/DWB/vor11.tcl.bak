$w insert end "L" ai
$w insert end "UTHERS" ar
$w insert end " anzuknüpfen, der "
$w insert end "einmal über tische äuszerte (tischreden 4, 662 Först.): "
$w insert end ""
$w insert end "Deutschland ist wie ein schöner weidlicher hengest, " i
$w insert end "der futter und alles gnug hat was er bedarf, es " i
$w insert end "fehlet ihm aber an einem reuter" i
$w insert end " (wiederholt z. b. "
$w insert end "von "
$w insert end "H" ai
$w insert end "ENISCH" ar
$w insert end " thes. 684, 43, nur mit der änderung "
$w insert end "\n\n\[II]\n\n" pagenr
$w insert end ""
$w insert end "an einem guten reuter" i
