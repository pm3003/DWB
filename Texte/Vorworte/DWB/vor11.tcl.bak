$w insert end "Z" ai
$w insert end "ACHER" ar
$w insert end ", der "
$w insert end "die eigentliche anregung gab, wie sie vorher schon "
$w insert end "F" ai
$w insert end "RANZ" ar
$w insert end " P" ai
$w insert end "FEIFFER" ar
$w insert end " gegeben hatte zu einer wesentlichen "
$w insert end "erleichterung die mir durch meine vaterstadt und dann "
$w insert end "auch "
$w insert end "W" ai
$w insert end "EIGAND" ar
$w insert end " durch sein engeres vaterland wurde. "
$w insert end "damals aber, im j. 1868, nahm der neue deutsche "
$w insert end "staat das nationalwerk so zu sagen auf seinen schosz. "
$w insert end "\nDas wiedererstehen der nation hängt in der that mit "
$w insert end "an dem gedeihen und der wirkung der deutschen "
